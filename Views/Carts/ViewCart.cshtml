@model IEnumerable<OrderedItem>
@{
    ViewData["Title"] = "ViewCart";
}
<a asp-action="ConfirmOrder" asp-controller="Orders" class="btn btn-primary btn-lg">
    <i class="bi bi-cart-check-fill">Confirm</i>
</a>

<div class="row mt-5">
    @foreach (var orderedItem in Model)
    {
        <div class="col-lg-4 col-md-6 text-decoration-none rounded-3 overflow-hidden">
            <div class="card border-primary mt-4 mb-3" style="max-width:345px;">
                <div class="card-body " style="background-image: url(@($"{FileSettings.FilePath}/{orderedItem.Item!.ImagePath}")); background-size: cover;
       background-position:center; height: 350px">
                    <div class="h-100 d-flex align-items-end">
                        <span class="badge bg-primary rounded-0 fs-5">@orderedItem.Item.Name</span>
                    </div>
                </div>

                <div class="text-muted card-footer d-flex justify-content-between align-items-center">
                    @* <h5 class="text-primary">@orderedItem.Item.Name</h5> *@
                    <span class="text-primary fs-5">
                        @orderedItem.Item.Price
                    </span>
                    <span class="text-primary fs-5">
                       Quantity @orderedItem.Quantity
                    </span>                   
                    <a class="btn btn-danger" asp-action="Remove" asp-controller="Carts" 
                    asp-route-cartId="@orderedItem.CartId" asp-route-itemId="@orderedItem.ItemId">Remove</a>
                </div>

            </div>
        </div>
    }
</div>


