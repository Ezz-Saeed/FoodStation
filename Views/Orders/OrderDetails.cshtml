@model OrderViewModel
@{
    ViewData["Title"] = "OrderDetails";
}

<h2 class="text-primary">
    Name: @Model.Order.TypeUser.UserName
</h2>
<h2 class="text-primary">
    Address: @Model.Order.TypeUser.Address
</h2>
<table class="table table-bordered border-primary mt-5">
    <thead>
        <tr class="border-primary">
            <th scope="col">Item</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var orderedItem in Model.OrderedItems)
        {
            <tr class="border border-primary">
                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <h5>@orderedItem.Item!.Name</h5>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <h5>@orderedItem.Quantity</h5>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <h5>@orderedItem.Price</h5>
                        </div>
                    </div>
                </td>
            </tr>
        }
        <tr class="border border-primary">
            <td>
                <div class="d-flex">
                    <div class="d-flex flex-column justify-content-center">
                        <h5>Total Quantity</h5>
                    </div>
                </div>
            </td>
            <td>
                <div class="d-flex">
                    <div class="d-flex flex-column justify-content-center">
                        <h5>@Model.Order.TotalQuantity</h5>
                    </div>
                </div>
            </td>
        </tr>
        <tr class="border border-primary">
            <td>
                <div class="d-flex">
                    <div class="d-flex flex-column justify-content-center">
                        <h5>Total Price</h5>
                    </div>
                </div>
            </td>
            <td>
                <div class="d-flex">
                    <div class="d-flex flex-column justify-content-center">
                        <h5>@Model.Order.TotalPrice</h5>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>
