@model Item

@{
    ViewData["Title"] = "Details";
}
<div class="card border-primary rounded-4 mt-5 overflow-x-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-5 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-primary fw-bolder">@Model.Name</h1>
                    <h4 class="text-primary fw-bolder">@Model.Price L.E</h4>
                    <span class="badge bg-info fs-5 mb-4">@Model.Category?.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.FilePath}/{Model.ImagePath}")" alt="@Model.Name" class="w-100" />
            </div>
        </div>
    </div>
</div>
